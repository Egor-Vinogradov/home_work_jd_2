<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration SYSTEM
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <property name="hibernate.dialect">
            org.hibernate.dialect.PostgreSQL10Dialect
        </property>
        <property name="hibernate.connection.driver_class">
            org.postgresql.Driver
        </property>

        <!-- Assume test is the database name -->
        <property name="hibernate.connection.url">
            jdbc:postgresql://localhost:5432/crm
        </property>
        <property name="hibernate.connection.username">
            root
        </property>
        <property name="hibernate.connection.password">
            root
        </property>

        <property name="hibernate.show_sql">
            true
        </property>

<!--        <mapping class="by.it_academy.jd2.crm.model.Employer"></mapping>-->
<!--        <mapping class="by.it_academy.jd2.crm.model.Department"></mapping>-->
<!--        <mapping class="by.it_academy.jd2.crm.model.Position"></mapping>-->
        <mapping class="by.it_academy.jd2.crm.model.EmployersHibernate"></mapping>
        <mapping class="by.it_academy.jd2.crm.model.DepartmentsHibernate"></mapping>
    </session-factory>
</hibernate-configuration>